#!/usr/bim/env python3

import rospy

if __name__=='__main__':
    rospy.init_node('my_first_python node')

    rospy.loginfo('This node has been started')

    rate = rospy.Rate(10)

    while not rospy.is_shutdown():
        rospy.loginfo("Hello")
        rate.sleep()  # try to execute the code every 0.1 sec

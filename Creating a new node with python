#!/usr/bim/env python3

import rospy

if __name__=='__main__':
    rospy.init_node('my_first_python node')

    rospy.loginfo('This node has been started')

    rospy.sleep(1)

    rospy.loginfo("Exit now")

// to save the file --- :wq
